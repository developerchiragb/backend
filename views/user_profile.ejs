<link rel="stylesheet" href="/css/user_profile.css">

<%if(user.id==profile_user.id){%>
    <form method="POST" action="/users/update/<%=profile_user.id%>">
    <input type="text" name="name" value="<%=profile_user.name%>" placeholder="Your Name" required>
    <input type="text" name="email" value="<%=profile_user.email%>" placeholder="Your Email" required>
    <input type="submit" value="Update">

    </form>
    <%}else{%>
        <p>
            Name: <%=profile_user.name%>
        </p>
        <p>
            Email: <%=profile_user.email%>
        </p>
        
    <%}%>
<a href="/users/sign-out"><button type="button">Log Out</button></a>
